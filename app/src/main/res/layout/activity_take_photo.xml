<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_margin="5dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_centerHorizontal="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="32dp"
        android:paddingRight="5dp">

        <!---
        <FrameLayout
            android:id="@+id/camera_preview"
            android:layout_gravity="center_horizontal"
            android:layout_width="240dp"
            android:layout_height="320dp" />
        -->

        <ImageView
            android:id="@+id/image_registration"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_gravity="center_horizontal" />

        <RelativeLayout
            android:id="@+id/relation_1"
            android:paddingTop="32dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_registration"
            android:layout_gravity="center_horizontal"
            android:background="#fff">

            <Button
                android:id="@+id/button_use_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_default"
                android:text="使用照片" />

            <Button
                android:id="@+id/button_take_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/button_use_photo"
                android:background="@drawable/button_default"
                android:text="拍照" />


            <Button
                android:id="@+id/button_discard_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/button_take_photo"
                android:background="@drawable/button_default"
                android:text="重新拍照" />

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
