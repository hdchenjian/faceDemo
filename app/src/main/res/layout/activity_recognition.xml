<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_margin="0dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_centerHorizontal="true">

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="1dp"
      android:paddingLeft="0dp"
      android:paddingRight="1dp">

    <RelativeLayout
        android:id="@+id/recognition_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:background="#fff">

      <ImageView
          android:id="@+id/image_view"
          android:layout_width="240dp"
          android:layout_height="320dp" />

      <ImageView
          android:id="@+id/image_1"
          android:layout_toRightOf="@id/image_view"
          android:layout_width="85dp"
          android:layout_marginLeft="20dp"
          android:layout_height="85dp" />

        <TextView
            android:id="@+id/image_1_relation"
            android:layout_toRightOf="@id/image_view"
            android:layout_below="@id/image_1"
            android:layout_width="80dp"
            android:layout_height="15dp"
            android:layout_marginLeft="20dp"
            android:background="#fff"
            android:gravity="center"
            android:text=" "
            android:textColor="@android:color/black"
            android:textSize="12sp" />

      <ImageView
          android:id="@+id/image_2"
          android:layout_toRightOf="@id/image_view"
          android:layout_below="@id/image_1_relation"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="20dp"
          android:layout_width="85dp"
          android:layout_height="85dp" />

        <TextView
            android:id="@+id/image_2_relation"
            android:layout_toRightOf="@id/image_view"
            android:layout_below="@id/image_2"
            android:layout_width="80dp"
            android:layout_height="15dp"
            android:layout_marginLeft="20dp"
            android:background="#fff"
            android:gravity="center"
            android:text=" "
            android:textColor="@android:color/black"
            android:textSize="12sp" />

      <ImageView
          android:id="@+id/image_3"
          android:layout_toRightOf="@id/image_view"
          android:layout_below="@id/image_2_relation"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:layout_width="85dp"
          android:layout_height="85dp" />

        <TextView
            android:id="@+id/image_3_relation"
            android:layout_width="80dp"
            android:layout_height="15dp"
            android:layout_below="@id/image_3"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/image_view"
            android:background="#fff"
            android:gravity="center"
            android:text=" "
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/recognition_success_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:background="#fff">

      <ImageView
          android:id="@+id/recognition_success"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_centerVertical="true"
          android:paddingLeft="5dp"
          android:src="@drawable/recognition_success" />

        <TextView
            android:id="@+id/text_recognition"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/recognition_success"
            android:background="#fff"
            android:text="识别成功"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/recognition_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:gravity="center"
        android:text=" "
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recognition_name"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#fff">

      <ImageView
          android:id="@+id/notice_image"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_centerVertical="true"
          android:paddingLeft="10dp"
          android:src="@drawable/notice" />
      <TextView
          android:id="@+id/recognition_notice"
          android:layout_toRightOf="@id/notice_image"
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:background="#fff"
          android:text="已微信通知以下人员:"
          android:textColor="@android:color/black"
          android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/notice_relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recognition_name"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#fff">

      <RelativeLayout
          android:id="@+id/relation_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:background="#fff">
        <ImageView
            android:id="@+id/notice_1"
            android:layout_width="80dp"
            android:layout_gravity="center_vertical"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/relation_1_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@id/notice_1"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:background="#fff"
            android:gravity="center"
            android:text=" "
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:layout_marginBottom="0dp" />
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/relation_2"
          android:layout_toRightOf="@id/relation_1"
          android:layout_marginLeft="10dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:background="#fff">
        <ImageView
            android:id="@+id/notice_2"
            android:layout_width="80dp"
            android:layout_gravity="center_vertical"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/relation_2_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@id/notice_2"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:background="#fff"
            android:gravity="center"
            android:text=" "
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:layout_marginBottom="0dp" />
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/relation_3"
          android:layout_toRightOf="@id/relation_2"
          android:layout_marginLeft="10dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:background="#fff">
        <ImageView
            android:id="@+id/notice_3"
            android:layout_width="80dp"
            android:layout_gravity="center_vertical"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/relation_3_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@id/notice_3"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:background="#fff"
            android:gravity="center"
            android:text=" "
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:layout_marginBottom="0dp" />
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/relation_4"
          android:layout_toRightOf="@id/relation_3"
          android:layout_marginLeft="10dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:background="#fff">
        <ImageView
            android:id="@+id/notice_4"
            android:layout_width="80dp"
            android:layout_gravity="center_vertical"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/relation_4_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@id/notice_4"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:background="#fff"
            android:gravity="center"
            android:text=" "
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:layout_marginBottom="0dp" />
      </RelativeLayout>
    </RelativeLayout>

  </LinearLayout>
</LinearLayout>
